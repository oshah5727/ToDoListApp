<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoListApp.Views.DashboardPage"
             Title="Dashboard">

    <Grid RowDefinitions="Auto, Auto, *">
        <!-- Navigation Bar -->
        <Grid Grid.Row="0" 
              BackgroundColor="{StaticResource Primary}" 
              ColumnDefinitions="*, Auto, Auto"
              Padding="10">
            <Label Text="ToDo List" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   TextColor="White"
                   VerticalOptions="Center" />

            <Button Grid.Column="1"
                    Text="Account"
                    Margin="0,0,10,0"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Clicked="OnAccountClicked" />

            <Button Grid.Column="2"
                    Text="Settings"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Clicked="Settings_Clicked" />
        </Grid>

        <!-- Quick Add Section -->
        <Frame Grid.Row="1" 
               Margin="15"
               Padding="15"
               CornerRadius="10"
               BorderColor="{StaticResource Primary}"
               BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}">
            <Grid ColumnDefinitions="*, Auto">
                <Entry x:Name="QuickAddEntry"
                       Placeholder="Add a new task..."
                       ReturnCommand="{Binding QuickAddCommand}"
                       ReturnType="Done"
                       Grid.Column="0" />

                <Button Text="+"
                        FontSize="18"
                        WidthRequest="50"
                        Grid.Column="1" />
            </Grid>
        </Frame>

        <!-- Dashboard Content -->
        <ScrollView Grid.Row="2">
            <VerticalStackLayout Spacing="15" Padding="15">
                <!-- Today's Tasks Section -->
                <Frame BorderColor="{StaticResource Primary}"
                       BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                       CornerRadius="10"
                       Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Today's Tasks" 
                               FontSize="18" 
                               FontAttributes="Bold" />

                        <CollectionView x:Name="TodayTasksCollection"
                                        ItemsSource="{Binding TodayTasks}"
                                        EmptyView="No tasks for today">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="0,8" ColumnDefinitions="Auto, *, Auto">
                                        <CheckBox IsChecked="{Binding IsComplete}"
                                                  CheckedChanged="OnTaskCompletionChanged" />

                                        <Label Grid.Column="1"
                                               Text="{Binding Name}"
                                               VerticalOptions="Center"
                                               TextDecorations="{Binding IsComplete, Converter={StaticResource BoolToStrikethroughConverter}}" />

                                        <Button Grid.Column="2"
                                                Text="..."
                                                Clicked="OnTaskOptionsClicked"
                                                CommandParameter="{Binding Name}"
                                                WidthRequest="40"
                                                HeightRequest="40"
                                                CornerRadius="20" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- Upcoming Tasks Section -->
                <Frame BorderColor="{StaticResource Secondary}"
                       BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                       CornerRadius="10"
                       Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Upcoming Tasks" 
                               FontSize="18" 
                               FontAttributes="Bold" />

                        <CollectionView x:Name="UpcomingTasksCollection"
                                        ItemsSource="{Binding UpcomingTasks}"
                                        EmptyView="No upcoming tasks">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="0,8" ColumnDefinitions="Auto, *, Auto">
                                        <CheckBox IsChecked="{Binding IsComplete}"
                                                  CheckedChanged="OnTaskCompletionChanged" />

                                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                                            <Label Text="{Binding Name}" 
                                                   VerticalOptions="Center"
                                                   TextDecorations="{Binding IsComplete, Converter={StaticResource BoolToStrikethroughConverter}}" />
                                            <Label Text="{Binding DueBy}" 
                                                   FontSize="12"
                                                   TextColor="{StaticResource Gray500}" />
                                        </VerticalStackLayout>

                                        <Button Grid.Column="2"
                                                Text="..."
                                                Clicked="OnTaskOptionsClicked"
                                                CommandParameter="{Binding Name}"
                                                WidthRequest="40"
                                                HeightRequest="40"
                                                CornerRadius="20" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- Stats Section -->
                <Frame BorderColor="{StaticResource Tertiary}"
                       BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                       CornerRadius="10"
                       Padding="15">
                    <Grid ColumnDefinitions="*, *" RowDefinitions="Auto, Auto">
                        <Label Text="Statistics" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               Grid.ColumnSpan="2" />

                        <VerticalStackLayout Grid.Row="1" Grid.Column="0" Margin="0,10,0,0">
                            <Label Text="{Binding CompletedTasksCount, StringFormat='{0}'}" 
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center" />
                            <Label Text="Completed" 
                                   FontSize="14"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="1" Grid.Column="1" Margin="0,10,0,0">
                            <Label Text="{Binding PendingTasksCount, StringFormat='{0}'}" 
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center" />
                            <Label Text="Pending" 
                                   FontSize="14"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Grid>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>