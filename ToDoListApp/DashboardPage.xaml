<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ToDoListApp"
             x:Class="ToDoListApp.Views.DashboardPage"
             xmlns:model="clr-namespace:ToDoListApp"
             Title="Dashboard">

    <VerticalStackLayout>
   
            <Label Text="ToDo List" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   VerticalOptions="Center" />

            <Button 
                    Text="Account"
                    Margin="0,0,10,0"
                    TextColor="White"
                    Clicked="OnAccountClicked" />

            <Button 
                    Text="Settings"
                    TextColor="White"
                    Clicked="Settings_Clicked"/>
            <Button
                    Text="Add"
                    TextColor="White"
                    Clicked="AddButton_Clicked"/>


        <ListView x:Name="TaskListView"
          HasUnevenRows="True"
          SeparatorVisibility="Default">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>

                            <!-- Left Column: Checkbox -->
                            <StackLayout Grid.Column="0"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center">
                                <CheckBox IsChecked="{Binding IsCompleted}" />
                            </StackLayout>

                            <!-- Right Column: Task Details -->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0"
                               Text="{Binding Name}"
                               FontSize="18"
                               FontAttributes="Bold"
                               LineBreakMode="TailTruncation" />

                                <Label Grid.Row="1"
                               Text="{Binding Description}"
                               FontSize="14"
                               LineBreakMode="TailTruncation" />

                                <Label Grid.Row="2"
                               Text="{Binding Date, StringFormat='{0:MMMM dd, yyyy}'}"
                               FontSize="12" />

                                <!-- Edit button aligned to right -->
                                <StackLayout Grid.Row="3"
                                     Orientation="Horizontal"
                                     HorizontalOptions="End"
                                     VerticalOptions="Center">
                                    <Button Text="Edit"
                                    Clicked="OnEditClicked"
                                    CommandParameter="{Binding .}"
                                    WidthRequest="70" />
                                </StackLayout>
                            </Grid>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>

    
</ContentPage>