<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoListApp.AddTaskView">

    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
           CornerRadius="10"
           BorderColor="{StaticResource Primary}"
           WidthRequest="300"
           HeightRequest="300"
           Padding="20">
        <VerticalStackLayout Spacing="15">
            <Label Text="Add New Task"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label Text="Task Name:" />
            <Entry x:Name="TaskNameEntry"
                   IsReadOnly="True" />

            <Label Text="Description:" />
            <Entry x:Name="TaskDescriptionEntry"
                   Placeholder="Enter task description..." />

            <Label Text="Due Date:" />
            <DatePicker x:Name="TaskDueDatePicker"
                        MinimumDate="{Binding MinDate}"
                        Date="{Binding MinDate}" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button Text="Cancel"
                        BackgroundColor="{StaticResource Gray500}"
                        Clicked="OnCancelClicked" />

                <Button Text="Add Task"
                        BackgroundColor="{StaticResource Primary}"
                        Clicked="OnAddTaskClicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</ContentView>
